<form action="/session" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label>Username:
    <input type="text" name="user[username]">
  </label>

  <label>Password:
    <input type="password" name="user[password]">
  </label>

  <button type="submit">Log In!</button>
</form>
